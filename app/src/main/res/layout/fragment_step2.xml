<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/objt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIVEL DE ATIVIDADE"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"
        android:textColor="#8BC34A"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="90dp"/>

    <TextView
        android:id="@+id/txt01"
        android:layout_width="300dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Qual o seu nivel de atividade ?"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="#8BC34A"
        android:layout_marginTop="90dp"
        />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_marginTop="100dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/ativo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ativo"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/ativodesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passa ao menos metade do dia fazendo esforço físico"
                    android:textSize="14sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/poucoativo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pouco ativo"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/descpouco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passa a maior parte do dia sentado (caixa de banco,programador)"
                    android:textSize="14sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/muito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Muito ativo"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/card_description02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passa boa parte do dia em pé (professor/professora),faz academia"
                    android:textSize="14sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>