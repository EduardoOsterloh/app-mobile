<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >

       <TextView
           android:id="@+id/NutriBalance"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="NutriBalance"
           android:textSize="35dp"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp"
           android:textColor="#8BC34A"/>

       <TextView
           android:id="@+id/criar"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Crie uma conta"
           android:layout_below="@+id/NutriBalance"
           android:layout_centerHorizontal="true"
           android:textSize="25dp"
           android:layout_marginTop="20dp"
           android:textStyle="bold"/>

       <TextView
           android:id="@+id/TextEmail"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Digite seu e-mail"
           android:layout_below="@+id/criar"
           android:textSize="17.5dp"
           android:layout_marginTop="50dp"
           android:textStyle="bold"
           android:layout_centerHorizontal="true"
           />
       <EditText
           android:id="@+id/inputEmail"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:inputType="textEmailAddress"
           android:hint="email@domain.com "
           android:layout_marginTop="10dp"
           android:paddingTop="20dp"
           android:layout_below="@+id/TextEmail"
           android:layout_centerHorizontal="true"
           android:ems="100"
           android:selectAllOnFocus="true"
           android:backgroundTint="#040503"
           android:gravity="center"/>

       <TextView
           android:id="@+id/nome"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Nome"
           android:layout_below="@+id/inputEmail"
           android:layout_marginLeft="10dp"
           android:textSize="17.5dp"
           android:layout_marginTop="25dp"
           android:layout_centerHorizontal="true"
           android:textStyle="bold"
           />

       <EditText
           android:id="@+id/inputnome"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:inputType="textEmailAddress"
           android:hint="nome "
           android:layout_marginTop="10dp"
           android:paddingTop="20dp"
           android:layout_below="@+id/nome"
           android:layout_centerHorizontal="true"
           android:ems="100"
           android:selectAllOnFocus="true"
           android:backgroundTint="#000000"
           android:gravity="center"/>

       <TextView
           android:id="@+id/senha"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Senha"
           android:layout_below="@+id/nome"
           android:layout_marginLeft="10dp"
           android:textSize="17.5dp"
           android:layout_marginTop="100dp"
           android:textStyle="bold"


           android:layout_centerHorizontal="true"
           />

       <EditText
           android:id="@+id/inputsenha"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:inputType="text"
           android:hint="Senha "
           android:backgroundTint="#000000"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           android:paddingTop="20dp"
           android:layout_below="@+id/senha"
           android:layout_marginLeft="10dp"
           android:ems="100"

           android:selectAllOnFocus="true"
           android:gravity="center"/>

       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/btnetapa"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/inputsenha"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="30dp"
           android:text="PrÃ³xima etapa"
           android:textColor="@color/white"
           android:gravity="center"
           android:background="@drawable/btnbackground"
           android:paddingLeft="90dp"
           android:paddingRight="90dp"/>


       <TextView
           android:id="@+id/textvoltar"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Voltar"
           android:textColor="#494949"
           android:textSize="20dp"
           android:layout_below="@id/btnetapa"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp" />


    </RelativeLayout>





