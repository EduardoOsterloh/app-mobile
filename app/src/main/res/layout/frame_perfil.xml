<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fundoRelative"
                android:layout_width="500dp"
                android:layout_height="200dp"
                android:background="@drawable/fundo_perfil"
                android:text="."
                />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/perfill"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="30dp"
                android:text="Perfil"/>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnn"
                android:layout_marginTop="90dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:background="#8BC34A"
                android:layout_marginLeft="200dp"
                android:text="Olá Usuario01"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="180dp"
                android:background="#FFFFFF" >

                <TextView
                    android:id="@+id/metainfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minhas metas"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:textSize="25dp"/>

                <TextView
                    android:id="@+id/info_objetivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Objetivo: Ganhar Peso"
                    android:layout_below="@id/metainfo"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    />

                <View
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/info_objetivo"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"/>


                <TextView
                    android:id="@+id/info_altura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Altura: 157cm"
                    android:layout_below="@id/info_objetivo"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"/>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/info_altura"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>
                <TextView
                    android:id="@+id/info_peso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peso: 60kg"
                    android:layout_below="@id/info_altura"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"/>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/info_peso"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/info_idade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Idade: 20"
                    android:layout_below="@id/info_peso"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"/>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/info_idade"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/info_atividade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="atividade: 20"
                    android:layout_below="@id/info_idade"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"/>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/info_atividade"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>



                <TextView
                    android:id="@+id/pessoaisinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informações pessoais:"
                    android:layout_below="@id/info_atividade"
                    android:textSize="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/info_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail: usuario01@gmail.com"
                    android:layout_below="@id/pessoaisinfo"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"/>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/info_email"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/info_sexo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sexo: Feminino"
                    android:layout_below="@id/info_email"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"/>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/info_sexo"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/senha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senha:"
                    android:layout_below="@id/info_sexo"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"/>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/senha"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>

            </RelativeLayout>
        </RelativeLayout>
</androidx.core.widget.NestedScrollView>
