<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtvc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Informe um pouco sobre vocÃª"
        android:textSize="34dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_masculino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_below="@+id/txtvc"
        android:text="Masculino"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_feminino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_below="@id/txtvc"
        android:text="Feminino"
        />

    <TextView

        android:id="@+id/txtidade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Qual a sua idade?"
        android:layout_marginTop="200dp"
        android:textSize="16dp"

        />

    <EditText
        android:id="@+id/inputidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Idade "
        android:layout_marginTop="200dp"
        android:backgroundTint="#000000"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:ems="100"
        android:selectAllOnFocus="true"
        android:gravity="start"/>

    <TextView
        android:id="@+id/altura"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Qual a sua altura"
        android:layout_below="@+id/inputidade"
        android:layout_marginTop="20dp"/>


    <EditText
        android:id="@+id/inputaltura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Altura "
        android:layout_marginTop="300dp"
        android:backgroundTint="#000000"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:ems="100"
        android:selectAllOnFocus="true"
        android:gravity="start"/>

    <TextView
        android:id="@+id/peso"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Qual o seu peso?"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/inputaltura"/>

    <EditText
        android:id="@+id/inputpeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Idade "
        android:layout_marginTop="400dp"
        android:backgroundTint="#000000"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:ems="100"
        android:selectAllOnFocus="true"
        android:gravity="start"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/finalizar"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/back_input"
        android:layout_below="@id/inputpeso"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Finalizar"
        android:textColor="@color/black"

        />








</RelativeLayout>



